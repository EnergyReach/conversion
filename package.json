{
  "name": "@energyreach/conversion",
  "description": "A simple library to perform units conversion.",
  "version": "dev",
  "main": "./dist/index.js",
  "types": "./typings/index.d.ts",
  "license": "MIT",
  "packageManager": "pnpm@9.8.0",
  "engines": {
    "pnpm": ">=9",
    "node": ">=20"
  },
  "scripts": {
    "setup": "pnpm run format && pnpm run lint && pnpm run compile",
    "format": "prettier --write 'src/**/*' 'tests/**/*'",
    "format:check": "prettier --check 'src/**/*' 'tests/**/*'",
    "lint": "eslint src/** tests/**",
    "build:check": "tsc --noEmit true",
    "build": "tsc",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "big.js": "^6.2.1",
    "tslib": "^2.6.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/big.js": "^6.2.2",
    "@vitest/coverage-v8": "^2.0.5",
    "eslint": "^9.9.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0",
    "vitest": "^2.0.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EnergyReach/conversion.git"
  },
  "keywords": [
    "node",
    "simple",
    "units",
    "conversion",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/EnergyReach/conversion/issues"
  },
  "homepage": "https://github.com/EnergyReach/conversion/"
}

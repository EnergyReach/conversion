{
  "name": "@energyreach/conversion",
  "description": "A simple library to perform units conversion.",
  "version": "dev",
  "main": "./dist/index.js",
  "types": "./typings/index.d.ts",
  "license": "MIT",
  "packageManager": "pnpm@8.11.0",
  "engines": {
    "npm": ">=9.0.0",
    "node": ">=18.0.0"
  },
  "scripts": {
    "setup": "npm run format && npm run lint && npm run compile",
    "format": "prettier --write 'src/**/*' 'tests/**/*'",
    "format-check": "prettier --check 'src/**/*' 'tests/**/*'",
    "lint": "eslint src/** tests/**",
    "compile": "tsc --noEmit true",
    "build": "tsc",
    "test": "jest --coverage"
  },
  "dependencies": {
    "big.js": "^6.2.1",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@svile/node-development": "^0.1.5",
    "@types/big.js": "^6.2.2",
    "@types/jest": "^29.5.10",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EnergyReach/conversion.git"
  },
  "keywords": [
    "node",
    "simple",
    "units",
    "conversion",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/EnergyReach/conversion/issues"
  },
  "homepage": "https://github.com/EnergyReach/conversion/",
  "eslintConfig": {
    "extends": [
      "./node_modules/@svile/node-development/eslint"
    ],
    "root": true
  },
  "prettier": "@svile/node-development/prettier"
}

{
  "name": "@energyreach/conversion",
  "description": "A simple library to perform units conversion.",
  "version": "0.1.0",
  "main": "dist/index.js",
  "types": "typings/index.d.ts",
  "license": "MIT",
  "packageManager": "pnpm@8.7.6",
  "engines": {
    "npm": ">=9.0.0",
    "node": ">=18.0.0"
  },
  "scripts": {
    "setup": "npm run format && npm run lint && npm run compile",
    "format": "prettier --write 'src/**/*' 'tests/**/*'",
    "format-check": "prettier --check 'src/**/*' 'tests/**/*'",
    "lint": "eslint src/** tests/**",
    "compile": "tsc --noEmit true",
    "build": "tsc",
    "test": "jest --coverage"
  },
  "dependencies": {
    "big.js": "^6.2.1",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@energyreach/eslint-config": "^0.1.2",
    "@energyreach/jest-config": "^0.1.0",
    "@energyreach/prettier-config": "^0.1.0",
    "@energyreach/typescript-config": "^0.1.1",
    "@types/big.js": "^6.2.0",
    "@types/jest": "^29.5.5",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EnergyReach/conversion.git"
  },
  "keywords": [
    "node",
    "simple",
    "units",
    "conversion",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/EnergyReach/conversion/issues"
  },
  "homepage": "https://github.com/EnergyReach/conversion/",
  "eslintConfig": {
    "extends": [
      "@energyreach/eslint-config"
    ],
    "root": true
  },
  "prettier": "@energyreach/prettier-config"
}
